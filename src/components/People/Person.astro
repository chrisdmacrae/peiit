---
import type { CollectionEntry } from 'astro:content';

export type Props = CollectionEntry<'profiles'>

const profile = Astro.props
---
<a href={profile.slug} class="grow-0 shrink-0 basis-[calc(100vw-4rem)] md:basis-96 h-[30rem] hover:scale-110 hover:shadow-lg hover:z-10 transition-all">
  <div class={`relative md:basis-96 h-[30rem] rounded-3xl bg-cover overflow-hidden p-8 flex flex-col justify-end`} style={`background-image: url('${profile.data.photo}');`}>
    <div class="absolute z-0 top-0 right-0 bottom-0 left-0 bg-gradient-to-t from-black to-transparent" />
    <div class="relative z-1">
      <h3 class="text text-slate-50 shadow-sm font-bold text-xl">{[profile.data.firstName, profile.data.lastName].join(' ')}</h3>
      <p class="text text-slate-300 shadow-sm">{profile.data.title}</p>
    </div>
  </div>
</a>