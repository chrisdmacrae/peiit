---
import Lines from "../components/Lines.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import Layout from "../layout/Layout.astro";
import { CollectionEntry, getEntryBySlug } from "astro:content";
import { Spanner } from "../components/Spanner";

export const prerender = true

const {data} = await getEntryBySlug('pages', '_about') as CollectionEntry<'pages'>
---

<Layout title={data.title} description={data.description} {...data.meta}>
  <div class="bg-gradient-to-b from-slate-200 to-slate-50 dark:from-slate-900 dark:to-slate-800" slot="header">
    <Nav />

    <header class="relative md:min-h-[calc(100vh-32rem)] max-w-[70rem] p-8 mx-auto flex flex-col lg:flex-row items-end">
      <div class="absolute -bottom-6 right-0 w-96 h-96">
        <Lines />
      </div>

      <div class="relative lg:basis-[40rem] shrink-0">
        <h1 class="text-2xl md:text-4xl lg:text-5xl font-bold text-slate-800 dark:text-slate-100 font-mono">
          {data.title}
        </h1>
      </div>

      <div class="relative">
        <h2 class="text-md font-bold text-slate-600 dark:text-slate-300 font-mono">
          {data.description}
        </h2>
      </div>
    </header>
  </div>

  <section class="border-t md:border-b border-slate-200 dark:border-slate-700">
    <div class="max-w-[70rem] mx-auto grid grid-cols-1 md:grid-cols-4 [&>*]:border-b [&>*]:md:border-b-0 [&>:nth-child(n+1)]:md:border-r">
      <div class="flex flex-col gap-4 border-slate-200 dark:border-slate-700 p-8">
        <h2 class="text-xl md:text-2xl font-bold text-slate-800 dark:text-slate-100 font-mono">10,000+</h2>
        <p class="list-disc list-inside flex flex-col gap-2 text-slate-600 dark:text-slate-400">
          Remote Workers
        </p>
      </div>
      <div class="flex flex-col gap-4 border-slate-200 dark:border-slate-700 p-8">
        <h2 class="text-xl md:text-2xl font-bold text-slate-800 dark:text-slate-100 font-mono">50+</h2>
        <p class="list-disc list-inside flex flex-col gap-2 text-slate-600 dark:text-slate-400">
          Organizations
        </p>
      </div>
      <div class="flex flex-col gap-4 border-slate-200 dark:border-slate-700 p-8">
        <h2 class="text-xl md:text-2xl font-bold text-slate-800 dark:text-slate-100 font-mono">50+</h2>
        <p class="list-disc list-inside flex flex-col gap-2 text-slate-600 dark:text-slate-400">
          Companies
        </p>
      </div>
      <div class="flex flex-col gap-4 border-slate-200 dark:border-slate-700 p-8">
        <h2 class="text-xl md:text-2xl font-bold text-slate-800 dark:text-slate-100 font-mono">100+</h2>
        <p class="list-disc list-inside flex flex-col gap-2 text-slate-600 dark:text-slate-400">
          Students
        </p>
      </div>
    </div>
  </section>

  <section id="partnerships" class="max-w-[70rem] mx-auto flex flex-col justify-between md:flex-row gap-6 px-8">
    <div class="basis-1/2 shrink-0 flex flex-col gap-2">
      <h2 class="text-2xl md:text-4xl font-bol text-slate-800 dark:text-slate-100 font-mono">
        We are here to support the ecosystem
      </h2>
      <p class="text-sm text-slate-700">
        We are an agile not-for-profit organization. We are member-based, made up of IT companies, startups, organizations, professionals, remote workers, and students. The members make up the IT and Tech community in Prince Edward Island. If you have thoughts on how we can best serve our members, <a href="/contact">connect with us</a>.
      </p>
    </div>
    <div class="flex flex-col items-center gap-2">
      <img src="/images/partnerships/pei-devs.png" class="grow-0 w-48" alt="PEI Devs" />
      <img src="/images/partnerships/asda.png" class="grow-0 w-48" alt="ASDA" />
      <img src="/images/partnerships/atlantic-fintech.png" class="grow-0 w-48" alt="Atlantic Fintech" />
    </div>
  </section>

  <section id="spanner">
    <Spanner client:load />
  </section>

  <Footer />
</Layout>
